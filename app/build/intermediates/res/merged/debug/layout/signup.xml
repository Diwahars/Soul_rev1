<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Sign_Up">


    <LinearLayout
        android:id="@+id/activity_user_mainpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pro_pic_upload"
                android:elevation="0dp"
                android:background="@drawable/circle"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/primary_darker"
                android:src="@drawable/pro_pic_img" />

            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/pro_pic_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/pro_pic_upload"
                app:elevation="5dp"
                android:layout_alignRight="@+id/pro_pic_upload"
                app:backgroundTint="#ff9100" />
        </RelativeLayout>

        <TextView
            android:text="User Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namelabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/name"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:text="Class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classlabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/sclass"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp"/>
        <TextView
            android:text="Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seclabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/section"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp" />
        <TextView
            android:text="Mobile Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobilelabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/mobile"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passlabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/password"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp" />
        <TextView
            android:text="Re-Enter Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repasslabel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/reEnterPassword"
            android:padding="11dp"
            android:background="@drawable/layout_bg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:elevation="7dp" />



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/go"
            android:elevation="7dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:layout_margin="12dp" />
        <TextView android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Already a member? Login"
            android:gravity="center"
            android:textSize="16dip"
            android:layout_marginTop="10dp"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>

